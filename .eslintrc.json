{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "eslint:recommended",
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier", "@typescript-eslint/tslint"],
  "rules": {
    "semi": 0,
    "comma-dangle": 0,
    "prettier/prettier": "error",
    "import/no-unresolved": "off",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/jsx-filename-extension": [
      1,
      { "allow": "as-needed", "extensions": [".js", ".jsx", ".ts", ".tsx"] }
    ]
  }
}
